<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for playlist  -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/category_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/standard_padding</item>
        <item name="android:textColor">@color/android:white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="SongInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/standard_padding</item>
    </style>

    <style name="SongInfo.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="NowPlaying">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tan_background</item>
    </style>

    <style name="NowPlaying.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
