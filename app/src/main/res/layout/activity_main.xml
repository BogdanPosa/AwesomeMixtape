<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tan_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_padding"
        android:text="@string/title"
        android:textSize="@dimen/textSizeBig" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:text="@string/subtitle"
        android:textSize="@dimen/textSizeNormal"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_vol1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/vol1"
            style="@style/ImageButton"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/start"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/category_vol1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_vol2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/vol2"
            style="@style/ImageButton"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/start"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/category_vol2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_vol3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/vol3"
            style="@style/ImageButton"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/start"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/category_vol3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_vol4"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/vol4"
            style="@style/ImageButton"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/start"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/category_vol4" />
    </LinearLayout>
</LinearLayout>